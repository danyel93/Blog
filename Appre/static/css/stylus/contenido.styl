.contenido
	width 100%
	height 100%
	min-height 100%
	display block
	position relative
	background-color c-negro
	.landing
		border solid 1px
		height 100%
		width 100%
		position relative
		h1
			font-size 3.5em
			padding 0
			margin 150px 0 0 0 
			font-weight 800
			text-align center
			color white
		h2
			font-size 1.4em
			padding 0
			margin 20px 0 
			font-weight 500
			text-align center
			color white
		.comenzar
			font-size 2em
			color white
			background-color azul
			width 20%
			text-align center
			padding 10px 5%
			position absolute
			bottom 20%
			left 35%
			border-radius 3px
			transition all 400ms ease-in-out
			&:hover
				background-color azul-2
				
			
		
		
.info
	width 100%
	position relative
	display block
	height 1000px
	background-color #fff